<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fiosys.expensor" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TopLevelActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".category.CreateCategoryActivity"
            android:label="@string/title_activity_create_category" >
        </activity>
        <activity
            android:name=".category.ViewCategory"
            android:label="@string/title_activity_view_category" >
        </activity>
        <activity
            android:name=".accounts.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".transactions.CreateTransactionActivity"
            android:label="@string/title_activity_create_transaction" >
        </activity>
        <activity
            android:name=".accounts.SelectAccountActivity"
            android:label="@string/title_activity_select_account" >
        </activity>
        <activity
            android:name=".category.SelectCategoryActivity"
            android:label="@string/title_activity_select_category" >
        </activity>
    </application>

</manifest>
